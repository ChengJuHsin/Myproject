@model IEnumerable<HomeWork325.Models.OrderList>

@{
    ViewBag.Title = "orderlist";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-KK94CHFLLe+nY2dmCWGMq91rCGa5gtU4mk92HdvYe+M/SXH301p5ILy+dN9+nJOZ" crossorigin="anonymous">
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ENjdO4Dr2bkBIFxQpeoTz1HIcje39Wm4jDKdf19U8gI4ddQ3GYNS7NTKfAdVQSZe" crossorigin="anonymous"></script>

<h2>本月份訂單清冊</h2>
<form action="/C325/oderlistB" method="post">
    <select id="Select1" name="select">
        @foreach (var item in Model)
        {
            <option>
                @item.cAccount
            </option>
        }


    </select>
    <input type="submit" name="查詢" value="查詢" />
    <a class="btn btn-outline-primary" href="/C325/Index" role="button">依帳號統計</a>
</form>
<table class="table mt-2">
    <tr class="table-primary">
        <th>
            @Html.DisplayNameFor(model => model.cAccount)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.pTitle)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.pAmount)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.cAccount)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.pTitle)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.pAmount)
            </td>

        </tr>
    }

</table>
